<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fyp.lun.rehabpartner.SummaryPage">

    <TextView
        android:text="Congratulations! You've completed "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Seated Knee Extension Exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:id="@+id/exNameTV" />

    <TextView
        android:text="Incorrect motion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView14"
        android:layout_alignEnd="@+id/textView13"
        android:textSize="16sp"
        android:textAlignment="center" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp"
        android:id="@+id/homeBtn"
        android:textSize="18sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/repsTV"
        android:id="@+id/setsTV"
        android:layout_alignTop="@+id/textView12"
        android:layout_above="@+id/textView13"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeTV"
        android:layout_alignEnd="@+id/setsTV"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignTop="@+id/textView13"
        android:layout_above="@+id/textView14" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/timeTV"
        android:id="@+id/incorrectTV"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignEnd="@+id/timeTV"
        android:layout_alignBottom="@+id/textView14" />

    <TextView
        android:text="Leg Chosen:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView23"
        android:textSize="16sp"
        android:layout_above="@+id/repsTV"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/repsTV"
        android:textAlignment="center"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:text="Level:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_above="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_alignEnd="@+id/textView23"
        android:textSize="16sp"
        android:textAlignment="center" />

    <TextView
        android:text="Sets completed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView12"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView13" />

    <TextView
        android:text="Reps completed:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:id="@+id/textView11"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@+id/exNameTV"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView12" />

    <TextView
        android:text="Leg Leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sideTV"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignStart="@+id/repsTV"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/repsTV"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView11" />

    <TextView
        android:text="Beginner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelTV"
        android:layout_alignTop="@+id/textView25"

        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/repsTV" />

    <TextView
        android:text="Time to complete:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/textView13"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true" />
</RelativeLayout>
